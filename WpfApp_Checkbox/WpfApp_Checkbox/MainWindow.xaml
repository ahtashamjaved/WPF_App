<Window x:Class="WpfApp_Checkbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Checkbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label FontWeight="Bold">Pizza Topings</Label>
        <CheckBox Name="cbAllTopings" IsThreeState="True" Checked="cbAllTopings_CheckedChanged" Unchecked="cbAllTopings_CheckedChanged">Add All</CheckBox>
        <StackPanel Margin="10">
            <CheckBox Name="cbSalami" Checked="cbSingleCheck_CheckedChanged" Unchecked="cbSingleCheck_CheckedChanged">
                <TextBlock>
                    Salami <Run Foreground="Red" FontWeight="Bold">Spicy</Run>
                </TextBlock>
            </CheckBox>
            <CheckBox Name="cbMushrooms" Checked="cbSingleCheck_CheckedChanged" Unchecked="cbSingleCheck_CheckedChanged">Mushrooms</CheckBox>
            <CheckBox Name="cbMozzarella" Checked="cbSingleCheck_CheckedChanged" Unchecked="cbSingleCheck_CheckedChanged">Mozzarella</CheckBox>
        </StackPanel>
        
    </StackPanel>
</Window>
